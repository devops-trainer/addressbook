pipeline{
    agent none
    tools{
        jdk 'myjava'
        maven 'mymaven'
    }
    stages{
        stage("compile"){
            agent any
            steps{
                script{
                    echo "COMPILE THE CODE"
                    sh 'mvn compile'
                }
            }
        }
        stage("UnitTest"){
            agent {label 'linux_slave'}
            steps{
                script{
                    echo "TESTING THE CODE"
                    sh 'mvn test'
                }
            }
            post{
                always{
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage("Package"){
            agent {label 'linux_slave'}
            steps{
                script{
                    echo "PACKAGE THE CODE"
                    sh 'mvn package'
                }
            }
        }
    }
}