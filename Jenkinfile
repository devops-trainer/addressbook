pipeline{
    stages{
        stage("compile"){
            steps{
                script{
                    echo "COMPILE THE CODE"
                    sh 'mvn compile'
                }
            }
        }
        stage("UnitTest"){
            steps{
                script{
                    echo "TESTING THE CODE"
                    sh 'mvn test'
                }
            }
        }
        stage("Package"){
            steps{
                script{
                    echo "PACKAGE THE CODE"
                    sh 'mvn package'
                }
            }
        }
    }
}